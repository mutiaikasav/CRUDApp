@model  CRUDApp.Models.Employee

<form asp-action="Edit" asp-area="Employees" method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="Name">Nama</label>
                <input asp-for="Name" type="text" class="form-control required" placeholder="Masukkan Nama Karyawan" tabindex="1">
            </div>
            <div class="form-group">
                <label for="Position">Posisi</label>
                <input asp-for="Position" type="text" class="form-control required" placeholder="Masukkan Posisi Karyawan" tabindex="2">
            </div>
            <div class="form-group">
                <label for="Division">Divisi</label>
                <div class="form-control">
                    @Html.DropDownListFor(m => m.Division,new SelectList(Enum.GetValues(typeof(Div))),"Pilih Divisi")
                </div>
            </div>
            <div class="form-group">
                <label for="Address">Alamat</label>
                <textarea asp-for="Address" class="form-control" tabindex="4"></textarea>
            </div>
            <div class="form-group">
                <label for="Gender">Jenis Kelamin</label>
                <div class="form-control">
                    @Html.RadioButtonFor(m => m.Gender,"Pria") Pria
                    @Html.RadioButtonFor(m => m.Gender,"Wanita") Wanita
                </div>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Ubah Karyawan</button>
                    <a asp-action="Index" asp-controller="Employees" class="btn btn-secondary">Batal</a>
                </center>
            </div>
        </div>
    </div>
</form>